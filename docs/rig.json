{
	"title": "OpenShred Rig",
    "__note__": "This schema does not prevent references to nonexistent materials, points or attempts to link points to themselves.",
	"type": "object",
    "definitions": {
        "point": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "integer"
                },
                "y": {
                    "type": "integer"
                }
            },
            "required": ["x", "y"]
        }
    },
	"properties": {
		"pointMaterials": {
			"type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "density": {
                        "type": "number"
                    },
                    "airResistance": {
                        "type": "number",
                        "minimum": 1
                    },
                    "friction": {
                        "type": "number",
                        "minimum": 1
                    },
                    "mass": {
                        "type": "number",
                        "minimum": 0,
                        "exclusiveMinimum": true
                    },
                    "restitution": {
                        "type": "number",
                        "minimum": 1
                    }
                },
                "required": ["density", "airResistance", "friction", "mass"]
            }
		},
		"points": {
			"type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "location": {
                        "$ref": "#/definitions/point"
                    },
                    "material": {
                        "type": "string",
                        "minLength": 1
                    }
                },
                "required": ["location", "material"]
            }
		},
		"linkMaterials": {
			"type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "linearityScale": {
                        "type": "number",
                        "minimum": 0
                    },
                    "linearityShape": {
                        "type": "number",
                        "minimum": 0
                    },
                    "strength": {
                        "type": "number",
                        "minimum": 0
                    }
                },
                "required": ["linearityScale", "linearityShape", "strength"]
            }
		},
		"links": {
			"type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "from": {
                        "type": "string",
                        "minLength": 1
                    },
                    "to": {
                        "type": "string",
                        "minLength": 1
                    },
                    "material": {
                        "type": "string",
                        "minLength": 1
                    },
                    "controls": {
                      	"type": "object",
                        "additionalProperties": {
                        	"type": "number",
                            "minimum": 0,
                            "exclusiveMinimum": true
                        }
                    }
                },
                "required": ["from", "to", "material"]
            }
		}
	},
	"required": ["pointMaterials", "points", "linkMaterials", "links"]
}